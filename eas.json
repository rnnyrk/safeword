{
  "cli": {
    "version": ">= 3.13.3"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "app-bundle",
        "android": {
          "image": "default"
        }
      },
      "env": {
        "APP_ENV": "development"
      }
    },
    "simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "app-bundle",
        "android": {
          "image": "default"
        }
      },
      "env": {
        "APP_ENV": "development"
      }
    },
    "staging": {
      "channel": "staging",
      "distribution": "internal",
      "android": {
        "buildType": "app-bundle",
        "android": {
          "image": "default"
        }
      },
      "env": {
        "APP_ENV": "staging",
        "FLIPPER_DISABLE": "1"
      }
    },
    "production": {
      "channel": "production",
      "android": {
        "buildType": "app-bundle",
        "android": {
          "image": "default"
        }
      },
      "env": {
        "APP_ENV": "production",
        "FLIPPER_DISABLE": "1"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
